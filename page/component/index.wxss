@import '../common/common.wxss';
page{
    background-color: #efefef;
}
.orders-box{
    color: #999;
    font-size: 28rpx;
}
.orders-tab{
    display: flex;
    justify-content: space-around;
    border-bottom: 2rpx solid #ddd;
    margin-bottom: 15rpx;
}
.tabItem{
    padding: 20rpx;
}
.tabItemAc{
    color: #666;
    border-bottom: 5rpx solid #AB956D;
}
.orderItem{
    background-color: #fff;
    margin: 10rpx 20rpx;
    padding: 10rpx 20rpx;
    border-radius: 20rpx;
    font-size: 30rpx;
    line-height: 50rpx;
    display: flex;
}
.shop_pic{
    width: 150rpx;
    height: 120rpx;
    border-radius: 10rpx;
    background-color: #eee;
    overflow: hidden;
    margin-right: 20rpx;
}
.shop_pic .img{
    width: 100%;
    height: 100%;
    display: block;
}
.shop_name{
    color: #333;
    font-size: 34rpx;
    font-weight: bold;
}
.shop_rank{
    height: 40rpx;
    width: 210rpx;
    text-align: center;
    font-size: 24rpx;
    color: #FF775F;
    background-color: rgba(255, 119, 95, .2);
    line-height: 40rpx;
    border-radius: 5rpx;
    margin-top: 10rpx;
}
.num{
    font-size: 26rpx;
}